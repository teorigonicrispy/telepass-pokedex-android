<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">?attr/attrColorPrimary</item>
        <item name="colorPrimaryDark">?attr/attrColorPrimaryDark</item>
        <item name="colorAccent">?attr/attrColorAccent</item>

        <item name="android:color">?attr/attrColorDark</item>
        <item name="android:textColorHint">?attr/attrColorDark</item>
        <item name="android:textColor">?attr/attrColorDark</item>
        <item name="android:textColorPrimary">?attr/attrColorDark</item>
        <item name="android:textColorSecondary">?attr/attrColorDark</item>
        <item name="android:textColorPrimaryDisableOnly">?attr/attrColorDark</item>
        <item name="android:textColorHighlight">?attr/attrColorAccent</item>
        <item name="colorControlNormal">?attr/attrColorDark</item>
        <item name="colorControlActivated">?attr/attrColorAccent</item>
        <item name="colorControlHighlight">?attr/attrColorAccent</item>

        <item name="android:colorBackground">?attr/attrColorBackground</item>
        <item name="android:windowBackground">?attr/attrColorBackground</item>
        <item name="android:navigationBarColor">?attr/attrColorPrimary</item>
        <item name="android:actionBarStyle">?attr/attrColorPrimary</item>

        <item name="android:windowActivityTransitions">true</item>

        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">?attr/attrColorPrimary</item>

        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowEnterTransition">@android:transition/no_transition</item>
        <item name="android:windowExitTransition">@android:transition/no_transition</item>

        <item name="android:fontFamily">@font/raleway</item>
    </style>

    <style name="noAnimTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="FullScreenDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">?attr/attrColorPrimary</item>
        <item name="colorPrimaryDark">?attr/attrColorPrimaryDark</item>
        <item name="colorAccent">?attr/attrColorAccent</item>

        <item name="android:color">?attr/attrColorDark</item>
        <item name="android:textColorHint">?attr/attrColorDark</item>
        <item name="android:textColor">?attr/attrColorDark</item>
        <item name="android:textColorPrimary">?attr/attrColorDark</item>
        <item name="android:textColorSecondary">?attr/attrColorDark</item>
        <item name="android:textColorPrimaryDisableOnly">?attr/attrColorDark</item>
        <item name="android:textColorHighlight">?attr/attrColorAccent</item>
        <item name="colorControlNormal">?attr/attrColorDark</item>
        <item name="colorControlActivated">?attr/attrColorAccent</item>
        <item name="colorControlHighlight">?attr/attrColorAccent</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">?attr/attrColorBackground</item>

        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>

        <item name="android:fontFamily">@font/raleway</item>
    </style>

    <style name="Dialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">?attr/attrColorPrimary</item>
        <item name="colorPrimaryDark">?attr/attrColorPrimaryDark</item>
        <item name="colorAccent">?attr/attrColorAccent</item>
        <item name="android:titleTextColor" tools:targetApi="m">?attr/attrColorPrimary</item>
        <item name="android:textColor">?attr/attrColorPrimary</item>

        <item name="android:buttonBarPositiveButtonStyle">@style/AlertDialogButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/AlertDialogButton</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/AlertDialogButton</item>
    </style>

    <style name="AlertDialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="colorButtonNormal">?attr/attrColorPrimary</item>
        <item name="android:textColor">?attr/attrColorPrimary</item>

        <item name="android:fontFamily">@font/raleway</item>
    </style>

    <color name="design_snackbar_background_color" tools:override="true">?attr/attrColorPrimary
    </color>
</resources>